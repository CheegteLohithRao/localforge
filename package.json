{
  "name": "localforge",
  "displayName": "LocalForge",
  "description": "Lightweight bridge between VS Code and user-owned offline Ollama models.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "localforge.explainSelection",
        "title": "LocalForge: Explain Selection"
      },
      {
        "command": "localforge.selectModel",
        "title": "LocalForge: Select Ollama Model"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "localforge.explainSelection",
          "when": "editor.hasSelection",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "localforge.explainSelection",
        "key": "Ctrl+alt+e",
        "when": "editor.hasSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
