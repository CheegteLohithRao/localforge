{
  "name": "localforge",
  "displayName": "LocalForge",
  "publisher": "LohithRao",
"description": "A local-first VS Code extension for integrating user-owned language models into the editor.",
  "version": "0.1.1",
  "license": "MIT",
  "icon": "Devlogo.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "keywords": [
    "ollama",
    "local llm",
    "local ai",
    "privacy"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "localforge.explainSelection",
        "title": "LocalForge: Explain Selection"
      },
      {
        "command": "localforge.selectModel",
        "title": "LocalForge: Select Ollama Model"
      },
      {
        "command": "localforge.askWithSelection",
        "title": "LocalForge: Run Prompt on Selection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "localforge.explainSelection",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "localforge.explainSelection",
        "key": "alt+M",
        "when": "editorHasSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
